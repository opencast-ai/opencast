{
  "name": "@molt/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest run",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init --skip-seed",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "@prisma/client": "^6.3.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "node-cron": "^4.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/node-cron": "^3.0.11",
    "@vitest/coverage-v8": "2.1.9",
    "ethers": "^6.16.0",
    "prisma": "^6.3.1",
    "tsup": "^8.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
